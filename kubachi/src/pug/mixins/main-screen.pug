mixin main-screen(params)
    if params.class == 'main-screen--product'
        section.main-screen.main-screen--product
            .main-screen__img(style='background-image: url(assets/images/main-screen-catalog.png);')
                h2.main-screen__img-title кольцо<br> “ традиция ”
                .main-screen__img-subtitle Кольцо с двойным камнем на классической<br class='desktop--hide'> «как-бы-часовой» цепочке с круглыми звеньями.
                a.scroll-down(href='product')
                    .scroll-down__scrolldown
                        .scroll-down__line
                    span
                        svg(viewBox='0 0 16 9' fill='none' xmlns='http://www.w3.org/2000/svg')
                            path(d='M7.29289 8.70711C7.68342 9.09763 8.31658 9.09763 8.70711 8.70711L15.0711 2.34315C15.4616 1.95262 15.4616 1.31946 15.0711 0.928932C14.6805 0.538408 14.0474 0.538408 13.6569 0.928932L8 6.58579L2.34315 0.928932C1.95262 0.538408 1.31946 0.538408 0.928932 0.928932C0.538408 1.31946 0.538408 1.95262 0.928932 2.34315L7.29289 8.70711ZM7 6L7 8L9 8L9 6L7 6Z' fill='#757575' opacity='0.2')

    else if params.class == 'main-screen--about'
        section.main-screen.main-screen--about
            .main-screen__img
                img(src='assets/images/main-screen-about.png' data-animation-type='img' data-animation-duration='5000')
    else if params.class == 'main-screen--delivery'
        section.main-screen.main-screen--delivery
            .main-screen__img
                img(src='assets/images/main-screen-delivery.png')
